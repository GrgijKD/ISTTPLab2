@{
    Layout = "_Layout";
}

@model ComputerShopAPIWebApp.Models.RAM

@{
    ViewData["Title"] = "Додавання оперативної пам'яті";
}

<h1>Додати</h1>

<h4>Оперативна пам'ять</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Обсяг</label>
                <input list="amountOptions" asp-for="Amount" class="form-control" />
                <datalist id="amountOptions">
                    <option value="8 ГБ">8 ГБ</option>
                    <option value="16 ГБ">16 ГБ</option>
                    <option value="32 ГБ">32 ГБ</option>
                </datalist>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Тип</label>
                <select asp-for="Type" class="form-control">
                    <option value="DDR">DDR</option>
                    <option value="DDR2">DDR2</option>
                    <option value="DDR3">DDR3</option>
                    <option value="DDR4">DDR4</option>
                    <option value="DDR5">DDR5</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
